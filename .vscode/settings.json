{
    "files.associations": {
        "*.inc": "php"
    },
    // Lines should be under 80 chars but
    // 120 is max line-length of PSR12.
    "editor.rulers": [80, 120],

    "php.debug.ideKey": "VSCODE",

    // Disable builtin PHP support. (We got Intelephense for that)
    "php.suggest.basic": false,

    // Explicitly ask for PHP8.2
    "intelephense.environment.phpVersion": "8.2.0",

    // Code sniffer (lints code)
    "phpcs.standard": "PSR12",
    // Code beautifier and fixer
    "phpcbf.standard": "PSR12",

    "smarty.highlight": true,

    // Sample composer.json file.
    // {
    //     "require-dev": {
    //         "squizlabs/php_codesniffer": "^3.7",
    //         "privacyidea/privacyidea-php-client": "^1.1",
    //         "smarty/smarty": "^4.3"
    //     }
    // }
    "intelephense.environment.includePaths": [
        "../gosa-core/include/",
        "vendor/privacyidea/privacyidea-php-client/src",
        "vendor/smarty/smarty/libs/",
        "vendor/setasign/tfpdf/",
    ],
}
