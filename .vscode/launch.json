{
    "version": "0.2.0",
    "configurations": [
            {
                "name": "Listen for Xdebug",
                "type": "php",
                "request": "launch",
                "port": 9003,
                // server -> local
                "pathMappings": {
                        "/usr/share/gosa/plugins/": "${workspaceRoot}",
                        "/usr/share/gosa": "${workspaceRoot}/../../gosa-core/gosa-core.salsa/",
                },
                "postDebugTask": "sleep-task",
                "log": true,
            },
    ]
}
